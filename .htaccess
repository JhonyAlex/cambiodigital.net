# Habilitar el motor de reescritura
RewriteEngine On
RewriteBase /

# Manejar index.html como página raíz
DirectoryIndex index.html

# Prevenir listado de directorios
Options -Indexes

# Redirigir permanentemente URLs con .html a URLs sin extensión
RewriteCond %{THE_REQUEST} \s/+(.+)\.html[\s?] [NC]
RewriteRule ^ /%1 [R=301,L,NE]

# Reescribir internamente URLs sin .html para servir archivos .html
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L]

# Opcional: Forzar HTTPS (descomenta si tienes SSL)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
