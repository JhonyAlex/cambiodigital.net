Options -Indexes -MultiViews
DirectoryIndex index.html

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Redirigir de .html a sin extensi√≥n (301 permanente)
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
    RewriteRule ^ %1 [R=301,L]
    
    # Si existe archivo.html, priorizarlo sobre directorio del mismo nombre
    RewriteCond %{REQUEST_FILENAME}.html -f
    RewriteRule ^(.*?)/?$ $1.html [L]
    
    # Si no existe como archivo, verificar si existe directorio
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.html -f
    RewriteRule ^(.*?)/?$ $1.html [L]

</IfModule>

# Opcional: Forzar HTTPS (descomenta si tienes SSL)
